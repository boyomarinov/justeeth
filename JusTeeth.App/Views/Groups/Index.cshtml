@model IEnumerable<JusTeeth.App.ViewModels.HungryGroupViewModel>
@using JusTeeth.App.Helpers

@section Scripts {
    <script type="text/javascript"
            src="http://maps.google.com/maps/api/js?sensor=false">
    </script>
}

<div class="container-fluid">
    <div class="row-fluid">

        <div class="span9" id="groups-container">
            @*@{Html.RenderAction("FilterBy", "Groups");}*@
            @Html.Action("FilterBy", "Groups")
        </div>
        <div class="span3">
            <div class="align-center">
                @(Ajax.ActionLink("Create", "GetCreateGroupFormPartial", "Groups",
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        LoadingElementId = "loading",
                        UpdateTargetId = "groups-container",
                        OnBegin = "clearGroupsContainer",
                        OnFailure = "createError",
                        OnSuccess = "createSuccess"
                    }, new { @class="btn" })
                )
            </div>
            <div class="align-center">
                <p><strong>My Company</strong></p>
                @Ajax.ImageActionLink(
                "/img/company-filter.png",
                "only from my company",
                "FilterBy",
                "Groups",
                new { filterParam = "company" },
                new AjaxOptions
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "groups-container"
                },
                new { @class = "filters" },
                "nonactive medium")
            </div>
            <div class="align-center">
                <p><strong>My Department</strong></p>
                @Ajax.ImageActionLink(
                "/img/department-filter.png",
                "only from my company",
                "FilterBy",
                "Groups",
                new { filterParam = "department" },
                new AjaxOptions
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "groups-container"
                },
                new { @class = "filters" },
                "nonactive medium")
            </div>
            <hr />
            <div class="align-center">
                <strong>Order by</strong>
                <br />
                <div>
                    <span>Soonest</span>
                    @Ajax.ImageActionLink(
                        "/img/clock.png",
                        "only from my company",
                        "FilterBy",
                        "Groups",
                        new { filterParam = "startTime" },
                        new AjaxOptions
                        {
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "groups-container"
                        },
                        new { @class = "filters" },
                        "small nonactive")
                </div>

                <div>
                    <span>Fastest</span>
                    @Ajax.ImageActionLink(
                        "/img/sand-clock.png",
                        "only from my company",
                        "FilterBy",
                        "Groups",
                        new { filterParam = "timeToEat" },
                        new AjaxOptions
                        {
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "groups-container"
                        },
                        new { @class = "filters" },
                        "small nonactive")

                </div>

                <div>
                    <span>Cheapest</span>
                    @Ajax.ImageActionLink(
                        "/img/money.png",
                        "only from my company",
                        "FilterBy",
                        "Groups",
                        new { filterParam = "money" },
                        new AjaxOptions
                        {
                            HttpMethod = "GET",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "groups-container"
                        },
                        new { @class = "filters" },
                        "small nonactive")
                </div>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    function requestStart(e) {
        e.options.data = {
            id: e.target.data("id")
        }
    }

    $(".filters").on("click", "img", function () {
        var allImgs = $(".filters img");
        allImgs.addClass("nonactive").removeClass("active");
        var target = $(this);
        target.removeClass("nonactive").addClass("active");
    })

    function createSuccess() {
    }

    function createError() {
    }

    function clearGroupsContainer() {
        $("#groups-container").html('<div id="loading" class="align-center">'+
                                    '<img src="/img/ajax-loader.gif" />'+
                                    '</div>');
    }
</script>


<style>
    .nonactive {
        filter: grayscale(100%);
        -webkit-filter: grayscale(100%);
        -moz-filter: grayscale(100%);
        filter: grayscale(100%);
    }

        .nonactive:hover {
            filter: none;
            -webkit-filter: none;
            -moz-filter: none;
        }

    .align-center {
        text-align: center;
    }

    .small {
        width: 60px;
        height: 60px;
    }

    .medium {
        width: 100px;
    }

