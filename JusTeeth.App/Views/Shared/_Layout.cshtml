<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ajax")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/bundles/kendo")
    <script src="~/Scripts/jquery.signalR-2.0.0-rc1.js"></script>
    <script src="~/signalr/hubs" type="text/javascript"></script>
    <script src="~/Scripts/messageSender.js"></script>
</head>
<body>
    <div id="main-app-container" class="container container-fluid">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("JusTeeth", "Index", "Home", null, new { @class = "brand" })
                    <div class="nav-collapse collapse">
                        <ul class="nav nav-tabs">
                            @*<li>
                                <a href="#"><img src="~/img/time-to-eat.png" width="50" height="50" /></a>
                            </li>*@
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                            <li>
                                <a href="#" onclick="goToTop()">To top</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Groups", "Index", "Groups")</li>
                                <li>@Html.ActionLink("Places", "Index", "Places")</li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Administration", "Index", "Administration/AdminHome")</li>
                            }
                            <li>
                                <a href="#" onclick="goToAboutPage()">Last Gropus</a>
                            </li>
                            <li>
                                <a href="#" onclick="goToContactPage()">Contacts</a>
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Just Teeth </p>
            </footer>
        </div>
    </div>

    <script>
        function goToTop() {
            $("html, body").animate({ scrollTop: 0 }, "slow");

            return false;
        }

        function goToAboutPage() {
            $('html, body').animate({ scrollTop: $('#About').position().top }, 'slow');

            return false;
        }

        function goToContactPage() {
            $('html, body').animate({ scrollTop: $('#Contact').position().top }, 'slow');

            return false;
        }
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)  
</body>
</html>
